<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MovieInformationFragment">
    <!--TODO faire un responsive -->

        <LinearLayout
                android:id="@+id/info_left_panel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6">

                <ImageView
                        android:id="@+id/info_movie_poster"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/poster_test"
                        android:background="@drawable/border_image"
                        android:padding="1dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="10dp"/>

                <TextView
                        android:id="@+id/info_movie_title"
                        android:layout_width="340dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/info_movie_poster"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"/>

                <TextView
                        android:id="@+id/info_movie_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/info_movie_title"
                        android:layout_marginStart="10dp"
                        android:textSize="15sp"
                        android:text="1h20"/>
                <TextView
                        android:id="@+id/info_movie_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/info_movie_title"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp"
                        android:textSize="15sp"
                        android:text="Octobre 1988"/>

                <!-- TODO force max size au title -->
                <LinearLayout
                        android:id="@+id/info_movie_stars"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal">
                    <ImageView
                            android:id="@+id/info_star_1"
                            android:layout_width="@dimen/info_star_size"
                            android:layout_height="@dimen/info_star_size"
                            android:src="@drawable/star_not_filled" />
                    <ImageView
                            android:id="@+id/info_star_2"
                            android:layout_width="@dimen/info_star_size"
                            android:layout_height="@dimen/info_star_size"
                            android:layout_marginStart="@dimen/info_star_marginLeft"
                            android:src="@drawable/star_not_filled" />
                    <ImageView
                            android:id="@+id/info_star_3"
                            android:layout_width="@dimen/info_star_size"
                            android:layout_height="@dimen/info_star_size"
                            android:layout_marginStart="@dimen/info_star_marginLeft"
                            android:src="@drawable/star_not_filled" />
                    <ImageView
                            android:id="@+id/info_star_4"
                            android:layout_width="@dimen/info_star_size"
                            android:layout_height="@dimen/info_star_size"
                            android:layout_marginStart="@dimen/info_star_marginLeft"
                            android:src="@drawable/star_not_filled" />
                    <ImageView
                            android:id="@+id/info_star_5"
                            android:layout_width="@dimen/info_star_size"
                            android:layout_height="@dimen/info_star_size"
                            android:layout_marginStart="@dimen/info_star_marginLeft"
                            android:src="@drawable/star_not_filled" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:padding="20dp">

                <TextView
                        android:id="@+id/info_movie_overview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="25dp"
                        android:text="Le lorem ipsum est, en imprimerie, une suite de mots sans signification utilisée à titre provisoire pour calibrer une mise en page, le texte définitif venant remplacer le faux-texte dès qu'il est prêt ou que la mise en page est achevée. Généralement, on utilise un texte en faux latin, le Lorem ipsum ou Lipsum."/>

                <TextView
                        android:id="@+id/info_movie_genre_1"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_below="@id/info_movie_overview"
                        android:layout_alignParentStart="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/genre_background"
                        android:padding="20dp"
                        android:text="Action"/>
                <TextView
                        android:id="@+id/info_movie_genre_2"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/info_movie_overview"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/genre_background"
                        android:padding="20dp"
                        android:text="Fantasy"/>
                <TextView
                        android:id="@+id/info_movie_genre_3"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_below="@id/info_movie_overview"
                        android:layout_alignParentEnd="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/genre_background"
                        android:padding="20dp"
                        android:text="Fantasy"/>

            </RelativeLayout>
        </LinearLayout>
</RelativeLayout>