<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_movie_container">
    <RelativeLayout
            android:id="@+id/item_movie_container_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:padding="15dp"
            android:background="@drawable/movie_list_item_background">

        <TextView
                android:id="@+id/item_movie_title"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:text="title"/>

        <ImageView
                android:id="@+id/item_like"
                android:layout_width="@dimen/item_like_size"
                android:layout_height="@dimen/item_like_size"
                android:layout_alignParentEnd="true"
                android:src="@drawable/like_null" />
    </RelativeLayout>
</LinearLayout>